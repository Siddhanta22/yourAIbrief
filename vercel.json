{
  "buildCommand": "./build.sh",
  "installCommand": "npm ci",
  "framework": "nextjs",

  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/send",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/newsletter/retry-failed",
      "schedule": "0 */2 * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PRISMA_GENERATE_DATAPROXY": "true"
  }
} 